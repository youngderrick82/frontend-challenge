{
	"root": true,
	"extends": [
		"@nodecraft/eslint-config/typescript",
		"@nodecraft/eslint-config/vue3"
	],
	"plugins": [
		"json"
	],
	"parserOptions": {
		"sourceType": "module",
		"parser": "@typescript-eslint/parser"
	},
	"overrides": [
		{
			"files": [
				"**/*.vue"
			],
			"env": {
				"browser": true,
				"es6": true
			},
			"extends": [
				"@nodecraft/eslint-config/typescript",
				"@nodecraft/eslint-config/vue3"
			],
			"parser": "vue-eslint-parser",
			"parserOptions": {
				"sourceType": "module",
				"ecmaVersion":2022,
				"parser": "@typescript-eslint/parser"
			},
			"plugins": [
				"@typescript-eslint",
				"json",
				"unicorn"
			]
		}
	]
}
